@{
    ViewData["Title"] = "Trang Sửa Tác Giả";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}
@model thuvienso.Models.Publisher
<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6"><h3 class="mb-0">Sửa Tác Giả</h3></div>
        </div>
    </div>
</div>

<div class="app-content">
    <div class="container-fluid">

        <form method="post" class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-body">
                        <div class="form-group mt-3">
                            <label for="name">Tên nhà xuất bản</label>
                            <input type="text" id="name" name="name" class="form-control"
                                   required maxlength="255" pattern=".*[A-Za-zÀ-ỹ].*"
                                   placeholder="Tên không được để trống hoặc chỉ chứa số."
                                   value="@Model.Name" />
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Name"]?.Errors.Count > 0)
                            {
                                <div class="text-danger">@ViewData.ModelState["Name"].Errors[0].ErrorMessage</div>
                            }
                        </div>

                        <div class="form-group mt-3">
                            <label for="description">Giới thiệu</label>
                            <textarea id="description" name="description" class="form-control"
                                      maxlength="1000" placeholder="Nhập mô tả nhà xuất bản (tuỳ chọn)">@Model.Description</textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 mt-3 text-end">
                <a href="/admin/publisher" class="btn btn-secondary">Huỷ</a>
                <input type="submit" value="Lưu" class="btn btn-success">
            </div>
        </form>

    </div>
</div>
