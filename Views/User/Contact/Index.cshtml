@{
    ViewData["Title"] = "Trang liên hệ";
    Layout = "~/Views/Shared/User/_Layout.cshtml";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger container text-center">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success container text-center">@TempData["Success"]</div>
}
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Breadcrumb -->
                <ul class="breadcrumbs bg-light mb-4">
                    <li class="breadcrumbs__item">
                        <a class="breadcrumbs__url" href="/">
                            <i class="fa fa-home"></i> Trang chủ
                        </a>
                    </li>
                    <li class="breadcrumbs__item breadcrumbs__item--current">
                        Liên hệ
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="wrap__contact-form">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h5>Liên hệ</h5>
                <form method="post" action="/contact" class="row">
                    <div class="col-md-6">
                        <div class="form-group form-group-name">
                            <label>Họ và tên <span class="required">*</span></label>
                            <input type="text" class="form-control" name="name"
                                   required maxlength="100"
                                   pattern=".*[A-Za-zÀ-ỹ].*">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group form-group-name">
                            <label>Email <span class="required">*</span></label>
                            <input type="email" class="form-control" name="email"
                                   required maxlength="100">
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group form-group-name">
                            <label>SĐT <span class="required">*</span></label>
                            <input type="text" class="form-control" name="phone"
                                   required maxlength="12" pattern="^0[0-9]{9}$">
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group form-group-name">
                            <label>Tiêu đề <span class="required">*</span></label>
                            <input type="text" class="form-control" name="subject"
                                   required maxlength="200"
                                   pattern=".*[A-Za-zÀ-ỹ].*">
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Nội dung liên hệ <span class="required">*</span></label>
                            <textarea class="form-control" rows="8" name="message"
                                      required maxlength="2000"
                                      pattern=".*[A-Za-zÀ-ỹ].*"></textarea>
                        </div>
                        <div class="form-group float-right mb-4">
                            <button type="submit" class="btn btn-primary">Gửi</button>
                        </div>
                    </div>
                </form>

            </div>


            <div class="col-md-4">
                <h5>Thông tin</h5>
                <div class="wrap__contact-form-office">
