@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/User/_Layout.cshtml";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger container text-center">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success container text-center">@TempData["Success"]</div>
}

<section class="wrap__section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="card mx-auto" style="max-width:520px;">
                    <article class="card-body">
                        <header class="mb-4">
                            <h4 class="card-title">Đăng ký</h4>
                        </header>
                        <form method="post" action="/user/auth/register">
                            <div class="form-row">
                                <div class="col form-group">
                                    <label>Họ và tên</label>
                                    <input type="text" name="name" class="form-control" required pattern="^(?!\d+$)[a-zA-ZÀ-ỹ0-9\s]{2,}$">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" name="email" class="form-control" required>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Mật khẩu</label>
                                    <input class="form-control" name="password" type="password" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Nhập lại mật khẩu</label>
                                    <input class="form-control" type="password" name="repassword" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Gửi </button>
                            </div> <!-- form-group// -->
                            <div class="form-group text-center">
                                Đã có tài khoản <a href="/user/auth/login">
                                    Đăng nhập
                                </a>
                            </div>
                        </form>
                    </article>
                </div>
            </div>
        </div>
    </div>
</section>