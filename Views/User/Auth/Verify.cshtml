@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/User/_Layout.cshtml";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger container text-center">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success container text-center">@TempData["Success"]</div>
}

<section class="wrap__section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="card mx-auto" style="max-width:520px;">
                    <article class="card-body">
                        <header class="mb-4">
                            <h4 class="card-title">Đăng nhập</h4>
                        </header>
                        <form method="post" action="/user/auth/login">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" name="email" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Mã OTP</label>
                                <input class="form-control" name="code" type="text" required>
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu mới</label>
                                <input class="form-control" type="password" name="new_password" required>
                            </div>
                            <div class="form-group">
                                <label>Nhập lại mật khẩu mới</label>
                                <input class="form-control" type="password" name="re_new_password" required>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Gửi </button>
                            </div> <!-- form-group// -->
                        </form>
                    </article>
                </div>
            </div>
        </div>
    </div>
</section>